public class power {
    public static void main(String[] args) {
        int a = 2;
        int b = 5;
        System.out.println(pow(a, b));
    }

    public static int pow(int a, int b) {
        if (b == 0) {
            return 1; //base case
        }
        int ans = pow(a, b - 1); // a^b-1 small problem
        return ans * a;
    }
}
