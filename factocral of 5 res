    public class factorialofn {
        public static void main(String[] args) {
            int n = 5;
            System.out.println(fact(n));
        }
        // public static int fact(int n)
        // {
        // int fn = fact(n-1);
        // return fn*n;

        // } this will case stackoverflow error to solve it we need base case.

        public static int fact(int n) {
                if(n == 1){
                    return 1;
                }
                int ans = fact(n-1);
                return ans*n;
        }

    }
